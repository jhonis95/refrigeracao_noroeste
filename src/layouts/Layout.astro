---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";

import whatsappIcon from "../assets/logos/whatsapp.svg"
import Seo from "./Seo.astro";
const { seoPageTitle, seoPageDescription}= Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<meta name="google-site-verification" content="1zdJNfstqtPsTQsFPi4AvSijgnquVQiPmAQuGyCT8e8" />
		<Seo title={seoPageTitle} description={seoPageDescription}/>
	</head>
	<body class=" font-roboto">
		<Navbar/>
		<slot />
		<a class="fixed bottom-10 right-10" href={`https://wa.me/55${import.meta.env.WHATSAPP_NUMBER}`} target="_blank" rel="noopener noreferrer">
			<img class=" size-20" src={whatsappIcon.src} alt="whatsapp icon">
		</a>
		<Footer/>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
