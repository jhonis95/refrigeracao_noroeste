---
const { title, text } = Astro.props;
---

<div  class=" flex flex-col gap-4">
	<div  x-data="{dropdownopen:false}" class="text-base px-5 bg-focus border-[0.5px] border-stroke rounded-sm shadow-sm sm:text-lg">
		<div class=" flex justify-between items-center py-4 text-main">
			<p class="font-bold">{title}</p>
            <div 
                x-on:click="
                    dropdownopen = !dropdownopen;
                    animate(
                      $el.querySelector('#arrowicon'), 
                      { opacity: dropdownopen ? 0 : 1, rotate: dropdownopen ? 90 : 0 },
                      { duration: 0.3 }
                    ); 
                    animate(
                      $el.querySelector('#closeIcon'), 
                      { opacity: dropdownopen ? 1 : 0, rotate: dropdownopen ? 0 : -90 },
                      { duration: 0.3 }
                    );
                "
            >
                <svg x-cloak x-show="dropdownopen" id="closeIcon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-x-icon lucide-x size-6 stroke-main"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
                <svg x-cloak x-show="!dropdownopen" id="arrowicon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-panel-top-open-icon lucide-panel-top-open size-6 stroke-main"><rect width="18" height="18" x="3" y="3" rx="2"/><path d="M3 9h18"/><path d="m15 14-3 3-3-3"/></svg>
            </div>
		</div>
		<p x-cloak x-show="dropdownopen" x-transition class="pb-4 text-justify">{text}</p>
	</div>
</div>