function formatPhoneNumber(number:string) {
  // Remove tudo que não é dígito
  let cleaned = number.toString().replace(/\D/g, '');

  // Aplica a máscara (99) 99999-9999
  return cleaned.replace(/^(\d{2})(\d{5})(\d{4})$/, '($1)$2-$3');
}
